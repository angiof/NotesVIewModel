<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.cardview.widget.CardView


        android:id="@+id/card_view"
        android:layout_width="400dp"
        android:layout_height="400dp"

        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"

        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"


        card_view:cardBackgroundColor="#A1887F"
        card_view:cardCornerRadius="16dp"
        card_view:cardElevation="8dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"

            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/t_note"
                android:layout_width="188dp"
                android:layout_height="74dp"
                android:contextClickable="false"
                android:text="motes"
                app:layout_constraintTop_toBottomOf="@+id/t_titolo"
                card_view:layout_constraintEnd_toEndOf="@+id/t_titolo"
                card_view:layout_constraintHorizontal_bias="0.5"
                card_view:layout_constraintStart_toStartOf="@+id/t_titolo"
                tools:ignore="MissingConstraints" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/t_titolo"
                android:layout_width="183dp"
                android:layout_height="37dp"
                android:layout_marginTop="32dp"
                android:minEms="100"
                android:text="titolo"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>






